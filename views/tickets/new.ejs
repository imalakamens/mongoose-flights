<%- include('../partials/header') %> 

<br><br><h2><%= title %> </h2>
<form method="POST" action="/flights/<%= flightId %>/tickets">
<label for="seat">Choose a Seat:</label>
<input type="text" name="seat" required pattern="[A-F][1-9]\d?" placeholder="Seat/Isle Number">
<label for="price">Price:</label>
<input type="number" name="price" min="0" step=".01">

<br>
<input type="submit" value="Add Ticket">
</form>
