<%- include('../partials/header') %> 
<h2><%= title %> </h2>

<div>Airline:</div>
<div><%= flight.airline %> </div>
<div>Airport:</div>
<div><%= flight.airport %> </div>
<div>Flight #:</div>
<div><%= flight.flightNo %> </div>
<div>Departure Date:</div>
<div><%= flight.departs %> </div>

<br>
<% if(flight.destinations.length) {%>

    <% flight.destinations.forEach(d => { %>
        <div>Airport:<%= d.airport %> </div>
        <div>Arrival:<%= d.arrival %> </div>
    
    <% }); %>

<% } else { %>
    <h5>No Destinations Yet</h5> 
<% }; %> 
<!-- Ticket render goes below! -->
<% if(ticket.length) {%>

    <% ticket.forEach(t => { %>
        <div>Seat:<%= t.seat %> </div>
        <div>Price:<%= t.price %> </div>
    
    <% }); %>

<% } else { %>
    <h5>No Tickets Yet</h5> 
<% }; %> 

<br><br><h2>Destiny's Child</h2>
<form method="POST" action="/flights/<%= flight._id %>/destinations">
<label for="airport">Select Destination:</label>
<select name="airport">
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN">DEN</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
</select>
<label for="arrival">Select Arrival Date:</label>
<input type="datetime-local" name="arrival">
<br>
<input type="submit" value="Add Destination">
</form>
<br><a href="/flights/<%= flight._id %> /tickets/new" class="btn btn-group">Tickets</a>

<%- include('../partials/footer') %> 
