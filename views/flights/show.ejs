<%- include('../partials/header') %> 
<h2> <%= title %>  </h2>

<div>Airline:</div>
<div><%= flight.airline %> </div>
<div>Airport:</div>
<div><%= flight.airport %> </div>
<div>Flight #:</div>
<div><%= flight.flightNo %> </div>
<div>Departure Date:</div>
<div><%= flight.departs %> </div>

<br>
<% if(flight.destinations.length) {%>
    <h5>Destinations:</h5> 
    <% flight.destinations.forEach(d => { %>
        <div>Airport:<%= d.airport %> </div>
        <div>Arrival:<%= d.arrival %> </div>
    
    <% }); %>

<% } else { %>
    <h5>No Destinations Yet</h5> 
<% }; %> 
<br>
<!-- Render tix below! -->

<% tickets.forEach(t => { %>
   
    <div>Seat:<%= t.seat %> </div>
    <div>Price:<%= t.price %> </div>
    
    <% }); %>

<br><br><h2>Create New Flight Destination</h2>
<form method="POST" action="/flights/<%= flight._id %>/destinations">
<label for="airport">Select Destination Airport:</label>
<input name="airport" list="airport" placeholder="e.g. LAX">
    <datalist id="airport">
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN">DEN</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
    </datalist>
</select>
<br>
<label for="arrival">Select Arrival Date:</label>
<input type="datetime-local" name="arrival">
<br>
<input type="submit" value="Add Destination">
</form>
<br><a href="/flights/<%=flight._id%>/tickets/new" class="btn btn-group">Create Ticket</a>

<%- include('../partials/footer') %> 
